# Comments Module - Standalone Makefile
# =======================================

CC = gcc
CFLAGS = -Wall -g -I../..
LDFLAGS = 

# Source files
SOURCES = comments_standalone.c comments.c ../../lexer.c
OBJECTS = $(SOURCES:.c=.o)
TARGET = comments_compiler

# Build standalone compiler
all: $(TARGET)
	@echo "âœ… Comments module standalone compiler built!"
	@echo "   Usage: ./$(TARGET) input.mlp output.mlp"

$(TARGET): $(OBJECTS)
	$(CC) $(CFLAGS) -o $@ $^ $(LDFLAGS)

%.o: %.c
	$(CC) $(CFLAGS) -c $< -o $@

# Clean
clean:
	rm -f $(OBJECTS) $(TARGET) test*.mlp test*.s test*.o test_program
	@echo "ðŸ§¹ Cleaned comments module"

# Test
test: $(TARGET)
	@echo "ðŸ§ª Testing comments module..."
	@echo "-- Tek satÄ±r yorum" > test_comments.mlp
	@echo "numeric x = 42" >> test_comments.mlp
	@echo "---" >> test_comments.mlp
	@echo "Ã‡ok satÄ±rlÄ±" >> test_comments.mlp
	@echo "yorum bloÄŸu" >> test_comments.mlp
	@echo "---" >> test_comments.mlp
	@echo "numeric y = 100" >> test_comments.mlp
	@echo "" >> test_comments.mlp
	@./$(TARGET) test_comments.mlp test_cleaned.mlp
	@echo ""
	@echo "ðŸ“„ Cleaned code:"
	@cat test_cleaned.mlp
	@echo ""
	@echo "âœ… Test passed!"

.PHONY: all clean test
