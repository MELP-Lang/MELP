-- Test PMPL debug block syntax

function test_debug_block() returns numeric
    numeric x = 10
    
    debug
        -- This entire block will be removed in production
        print("Debug: x = ")
        print(x)
        
        numeric debug_counter = 0
        while debug_counter < 3 do
            print("Debug iteration: ")
            print(debug_counter)
            debug_counter = debug_counter + 1
        end_while
    end_debug
    
    -- Normal code
    x = x * 2
    
    debug
        print("Debug: After multiplication, x = ")
        print(x)
    end_debug
    
    return x
end_function

function main() returns numeric
    numeric result = test_debug_block()
    
    print("Result: ")
    print(result)
    
    return 0
end_function
