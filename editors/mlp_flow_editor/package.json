{
  "name": "mlp-flow-editor",
  "version": "1.0.0",
  "description": "High-performance GUI designer for MLP language using React Flow",
  "main": "src/main/main.js",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "electron:build": "npm run build && electron-builder"
  },
  "keywords": [
    "mlp",
    "gui-designer",
    "react-flow",
    "electron",
    "visual-editor"
  ],
  "author": "MLP Team",
  "license": "MIT",
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "konva": "^9.3.6",
    "react-konva": "^18.2.10"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "vite": "^5.0.0",
    "concurrently": "^8.2.2",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.mlp.flow-editor",
    "productName": "MLP Flow Editor",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "src/main/**/*"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    }
  }
}
