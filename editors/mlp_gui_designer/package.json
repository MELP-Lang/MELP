{
  "name": "mlp-gui-designer",
  "version": "1.0.4",
  "description": "Visual Studio-style GUI Designer for MLP Language",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder",
    "dev": "electron . --dev"
  },
  "keywords": [
    "mlp",
    "gui",
    "designer",
    "electron",
    "visual-studio"
  ],
  "author": "MLP Team",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.mlp.guidesigner",
    "productName": "MLP GUI Designer",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!**/*.md",
      "!dist"
    ],
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "category": "Development"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
