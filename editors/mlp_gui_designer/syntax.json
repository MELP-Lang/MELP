{
  "syntaxes": {
    "mlp-default": {
      "id": "mlp-default",
      "name": "MLP Default Syntax",
      "description": "Native MLP syntax with keyword-based blocks",
      "file_extensions": [".mlp"],
      "indent_sensitive": false,
      "requires_semicolons": false,
      "block_style": "keyword",
      "markers": {
        "program_start": null,
        "program_end": "SON",
        "function_start": null,
        "function_end": "SON",
        "if_start": "İSE_BAŞLANGIÇ",
        "if_end": "SON",
        "else": "DEĞİLSE",
        "while_start": "DÖNGÜ_BAŞLANGIÇ",
        "while_end": "SON",
        "for_start": "İÇİN",
        "for_end": "SON",
        "class_start": null,
        "class_end": "SON",
        "method_start": null,
        "method_end": "SON"
      },
      "examples": [
        "İSE x > 0 İSE_BAŞLANGIÇ\n    YAZDIR(x)\nSON",
        "DÖNGÜ x < 10 DÖNGÜ_BAŞLANGIÇ\n    x = x + 1\nSON"
      ]
    },
    
    "c-style": {
      "id": "c-style",
      "name": "C-Style Syntax",
      "description": "C/Java/JavaScript style with curly braces",
      "file_extensions": [".mlp"],
      "indent_sensitive": false,
      "requires_semicolons": true,
      "block_style": "braces",
      "markers": {
        "program_start": "{",
        "program_end": "}",
        "function_start": "{",
        "function_end": "}",
        "if_start": "{",
        "if_end": "}",
        "else": "DEĞİLSE",
        "while_start": "{",
        "while_end": "}",
        "for_start": "{",
        "for_end": "}",
        "class_start": "{",
        "class_end": "}",
        "method_start": "{",
        "method_end": "}"
      },
      "conversion_rules": {
        "{": "İSE_BAŞLANGIÇ | DÖNGÜ_BAŞLANGIÇ | [context-dependent]",
        "}": "SON",
        ";": "[removed except for declarations]"
      },
      "examples": [
        "İSE (x > 0) {\n    YAZDIR(x);\n}",
        "DÖNGÜ (x < 10) {\n    x = x + 1;\n}"
      ]
    },
    
    "python-style": {
      "id": "python-style",
      "name": "Python-Style Syntax",
      "description": "Python style with colons and indentation",
      "file_extensions": [".mlp"],
      "indent_sensitive": true,
      "indent_size": 4,
      "requires_semicolons": false,
      "block_style": "indentation",
      "markers": {
        "program_start": ":",
        "program_end": "[dedent]",
        "function_start": ":",
        "function_end": "[dedent]",
        "if_start": ":",
        "if_end": "[dedent]",
        "else": "DEĞİLSE:",
        "while_start": ":",
        "while_end": "[dedent]",
        "for_start": ":",
        "for_end": "[dedent]",
        "class_start": ":",
        "class_end": "[dedent]",
        "method_start": ":",
        "method_end": "[dedent]"
      },
      "conversion_rules": {
        ":": "İSE_BAŞLANGIÇ | DÖNGÜ_BAŞLANGIÇ | [context-dependent]",
        "[indent]": "[block continues]",
        "[dedent]": "SON"
      },
      "examples": [
        "İSE x > 0:\n    YAZDIR(x)",
        "DÖNGÜ x < 10:\n    x = x + 1"
      ]
    }
  },
  
  "detection": {
    "header_directive": "// syntax: <syntax-id>",
    "auto_detect": {
      "enabled": true,
      "rules": [
        {
          "pattern": "\\{",
          "confidence": 0.8,
          "syntax": "c-style"
        },
        {
          "pattern": ":\\s*$",
          "confidence": 0.7,
          "syntax": "python-style"
        },
        {
          "pattern": "İSE_BAŞLANGIÇ|DÖNGÜ_BAŞLANGIÇ",
          "confidence": 0.9,
          "syntax": "mlp-default"
        }
      ],
      "fallback": "mlp-default"
    }
  },
  
  "metadata": {
    "version": "1.0.0",
    "created": "2025-01-19",
    "description": "Multi-syntax support for MLP programming language"
  }
}
