{
  "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
  "name": "MLP",
  "scopeName": "source.mlp",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#functions" },
    { "include": "#operators" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.number-sign.mlp",
          "match": "#.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.mlp",
          "match": "\\b(if|else|elif|while|for|in|return|break|continue|pass)\\b"
        },
        {
          "name": "keyword.other.mlp",
          "match": "\\b(fn|let|type|struct|enum|import|from|as)\\b"
        },
        {
          "name": "constant.language.mlp",
          "match": "\\b(True|False|None)\\b"
        },
        {
          "name": "keyword.operator.logical.mlp",
          "match": "\\b(and|or|not|is)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.mlp",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.mlp",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.mlp",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.mlp",
              "match": "\\\\."
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.mlp",
          "match": "\\b\\d+(\\.\\d+)?\\b"
        }
      ]
    },
    "functions": {
      "patterns": [
        {
          "name": "entity.name.function.mlp",
          "match": "\\b([a-zA-Z_][a-zA-Z0-9_]*)\\s*(?=\\()"
        },
        {
          "name": "entity.name.function.definition.mlp",
          "match": "(?<=fn\\s+)([a-zA-Z_][a-zA-Z0-9_]*)"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.mlp",
          "match": "(\\+|\\-|\\*|\\/|%|==|!=|<|>|<=|>=|=|\\->)"
        }
      ]
    }
  }
}
