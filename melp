#!/bin/bash
# MELP Compiler Wrapper Script
# Usage: melp <source.mlp> [options]

set -e

# Default behavior: compile and run
RUN_AFTER_BUILD=true
VERBOSE=false

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Get the directory where this script is located
SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
COMPILER="$SCRIPT_DIR/compiler/stage0/melpc_26"

# Check if compiler exists
if [ ! -f "$COMPILER" ]; then
    echo -e "${RED}Error: Compiler not found at $COMPILER${NC}"
    echo "Please build the compiler first: cd compiler/stage0 && make"
    exit 1
fi

# Parse arguments
while [[ $# -gt 0 ]]; do
    case $1 in
        --no-run)
            RUN_AFTER_BUILD=false
            shift
            ;;
        --keep-temp)
            KEEP_TEMP=true
            shift
            ;;
        -v|--verbose)
            VERBOSE=true
            shift
            ;;
        -o|--output)
            OUTPUT_NAME="$2"
            shift 2
            ;;
        -h|--help)
            echo "Usage: melp <source.mlp> [options]"
            echo ""
            echo "Options:"
            echo "  -v, --verbose    Show detailed compilation steps"
            echo "  --no-run         Compile only, don't run"
            echo "  --keep-temp      Keep intermediate files (.o)"
            echo "  -o, --output     Specify output name"
            echo "  -h, --help       Show this help"
            echo ""
            echo "Examples:"
            echo "  melp hello.mlp              # Compile and run (quiet)"
            echo "  melp hello.mlp -v           # Compile and run (verbose)"
            echo "  melp hello.mlp --no-run     # Compile only"
            echo "  melp hello.mlp -o myapp     # Custom output name"
            exit 0
            ;;
        *)
            if [ -z "$SOURCE" ]; then
                SOURCE="$1"
            fi
            shift
            ;;
    esac
done

# Check if source provided
if [ -z "$SOURCE" ]; then
    echo "Usage: melp <source.mlp> [options]"
    echo "Use 'melp --help' for more information"
    exit 1
fi

BASENAME="${SOURCE%.mlp}"
OUTPUT="${OUTPUT_NAME:-$BASENAME}"

# Check if source file exists
if [ ! -f "$SOURCE" ]; then
    echo -e "${RED}Error: Source file '$SOURCE' not found${NC}"
    exit 1
fi

ASM_FILE="${BASENAME}.s"
OBJ_FILE="${BASENAME}.o"

if [ "$VERBOSE" = true ]; then
    echo -e "${YELLOW}ğŸ”¨ Compiling MELP program: $SOURCE${NC}"
    echo ""
fi

# Step 1: MELP -> Assembly
if [ "$VERBOSE" = true ]; then
    echo "Step 1/3: MELP -> Assembly"
    "$COMPILER" "$SOURCE" "$ASM_FILE"
else
    "$COMPILER" "$SOURCE" "$ASM_FILE" > /dev/null 2>&1
fi
if [ $? -ne 0 ]; then
    echo -e "${RED}âŒ Compilation failed${NC}"
    exit 1
fi

# Step 2: Assembly -> Object
if [ "$VERBOSE" = true ]; then
    echo ""
    echo "Step 2/3: Assembly -> Object"
fi
nasm -f elf64 "$ASM_FILE" -o "$OBJ_FILE" 2>&1 | grep -v "^$" || true
if [ ${PIPESTATUS[0]} -ne 0 ]; then
    echo -e "${RED}âŒ Assembly failed${NC}"
    exit 1
fi

# Step 3: Link
if [ "$VERBOSE" = true ]; then
    echo ""
    echo "Step 3/3: Linking"
fi
ld "$OBJ_FILE" -o "$OUTPUT" 2>&1 | grep -v "^$" || true
if [ ${PIPESTATUS[0]} -ne 0 ]; then
    echo -e "${RED}âŒ Linking failed${NC}"
    exit 1
fi

# Success
if [ "$VERBOSE" = true ]; then
    echo ""
    echo -e "${GREEN}âœ… Build successful!${NC}"
    echo -e "   Executable: ${GREEN}$OUTPUT${NC}"
fi

# Clean up intermediate files (optional)
if [ "$KEEP_TEMP" != "true" ]; then
    rm -f "$OBJ_FILE"
fi

# Run the program if requested
if [ "$RUN_AFTER_BUILD" = true ]; then
    if [ "$VERBOSE" = true ]; then
        echo ""
        echo -e "${YELLOW}â–¶ï¸  Running program...${NC}"
        echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
    fi
    "./$OUTPUT"
    EXIT_CODE=$?
    if [ "$VERBOSE" = true ]; then
        echo "â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”â”"
        if [ $EXIT_CODE -eq 0 ]; then
            echo -e "${GREEN}âœ… Program completed successfully${NC}"
        else
            echo -e "${RED}âŒ Program exited with code $EXIT_CODE${NC}"
        fi
    fi
else
    if [ "$VERBOSE" = true ]; then
        echo ""
        echo "Run with: ./$OUTPUT"
    else
        echo "Compiled: $OUTPUT"
    fi
fi
